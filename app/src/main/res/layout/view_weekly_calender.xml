<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/swubab_white"
    android:paddingHorizontal="22dp">

    <TextView
        android:id="@+id/tv_calender_weekly_mon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_weekly_calender"
        android:paddingTop="40dp"
        android:paddingBottom="14dp"
        android:text="@string/tv_calender_weekly_mon"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Swubab.Medium"
        android:textColor="@color/swubab_gray1"
        app:layout_constraintEnd_toStartOf="@id/tv_calender_weekly_tue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_calender_weekly_tue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_weekly_calender"
        android:paddingHorizontal="22dp"
        android:paddingTop="40dp"
        android:paddingBottom="14dp"
        android:text="@string/tv_calender_weekly_tue"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Swubab.Medium"
        android:textColor="@color/swubab_gray1"
        app:layout_constraintEnd_toStartOf="@id/tv_calender_weekly_wed"
        app:layout_constraintStart_toEndOf="@id/tv_calender_weekly_mon"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_calender_weekly_wed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_weekly_calender"
        android:paddingHorizontal="22dp"
        android:paddingTop="40dp"
        android:paddingBottom="14dp"
        android:text="@string/tv_calender_weekly_wed"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Swubab.Medium"
        android:textColor="@color/swubab_gray1"
        app:layout_constraintEnd_toStartOf="@id/tv_calender_weekly_thu"
        app:layout_constraintStart_toEndOf="@id/tv_calender_weekly_tue"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_calender_weekly_thu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_weekly_calender"
        android:paddingHorizontal="22dp"
        android:paddingTop="40dp"
        android:paddingBottom="14dp"
        android:text="@string/tv_calender_weekly_thu"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Swubab.Medium"
        android:textColor="@color/swubab_gray1"
        app:layout_constraintEnd_toStartOf="@id/tv_calender_weekly_fri"
        app:layout_constraintStart_toEndOf="@id/tv_calender_weekly_wed"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_calender_weekly_fri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_weekly_calender"
        android:paddingHorizontal="22dp"
        android:paddingTop="40dp"
        android:paddingBottom="14dp"
        android:text="@string/tv_calender_weekly_fri"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Swubab.Medium"
        android:textColor="@color/swubab_gray1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_calender_weekly_thu"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>